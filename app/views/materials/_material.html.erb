<div class="container-fluid mb-2">
  <div class="row">
    <div class="col">
      <div class="card material">
        <a href="/materials/<%= the_material.id %>"><img src="<%= the_material.photo_ref%>" class="card-img-top" alt="..."></a>
          <div class="card-body">
            <h6 class="card-subtitle mb-2 text-muted"><%= the_material.name %></h6>
            
            <div class="row text-start mt-2">
              <div class="col-md-8">
              <form action="/insert_palette_safe" method="post">
                <input type="hidden" name="query_material_id" value="<%= the_material.id %>">
                <select class="form-select form-select-sm" aria-label=".form-select-sm example" name="query_palette_id">
                  
                  <option selected>Choose Palette</option>

                  <% @list_of_palettes.each do |a_palette|%>
                    <% if session.fetch(:user_id) == a_palette.user_id %>
                      <option value="<%= a_palette.id %>"><%= a_palette.palette_name %></option>
                    <% end %>
                  <% end %>    
                </select>
              </div>

              <div class="col-md-4">
                <button class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#save_index_material_<%=the_material.id%>">
                  Save
                </button>
              </div>
              </form>
            </div>

          </div>
      </div>
    </div>
  </div>
</div>