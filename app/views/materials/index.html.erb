<div class="row mt-2">
  <div class="col-md-3">
  </div>

  <div class="col-md-6">
    <form class="d-flex">
      <input class="form-control me-2" type="search" name="query_search" placeholder="Suppl away..." aria-label="Search">
      <button class="btn btn-outline-dark" type="submit"><i class="fas fa-search"></i></button>
    </form>
  </div>
</div>

<%= search_form_for @q do |f| %>
  <p>Narrow results:</p>

  <div>
    <%= f.label :type_cont, "Material Type" %>
    <%= f.text_field :type_cont, :placeholder => "Select Material Type" %>
  </div>

  <div>
    <%= f.label :name_cont, "Material Name" %>
    <%= f.text_field :name_cont, :placeholder => "Enter Material Name" %>
  </div>

  <div>
    <%#= f.label :year_lteq, "Released before" %>
    <%#= f.text_field :year_lteq, :placeholder => "Year less than or equal to" %>
  </div>

  <%= f.submit :class => "btn btn-primary btn-block" %>
  
  <a href="/movies">Clear filters</a>
<% end %>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          Photo ref
        </th>

        <th>
          Manufacturer
        </th>

        <th>
          Name
        </th>

        <th>
          Residential use
        </th>

        <th>
          Commercial use
        </th>

        <th>
          Price range
        </th>

        <th>
          Indoor outdoor
        </th>

        <th>
          Lead time
        </th>

        <th>
          Min units
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_materials.each do |a_material| %>
      <tr>
         <td>
          <img src="<%= a_material.photo_ref%>">
        </td>

        <td>
          <%= a_material.manufacturer_id %>
        </td>

        <td>
          <%= a_material.name %>
        </td>

        <td>
          <%= a_material.residential_use %>
        </td>

        <td>
          <%= a_material.commercial_use %>
        </td>

        <td>
          <%= a_material.price_range %>
        </td>

        <td>
          <%= a_material.indoor_outdoor %>
        </td>

        <td>
          <%= a_material.lead_time %>
        </td>

        <td>
          <%= a_material.min_units %>
        </td>

        <td>
          <a href="/materials/<%= a_material.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
