<div>
  <div>
    <h1>
      List of all projects
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new project
    </h2>

    <form action="/insert_project" method="post">
      <div>
        <label for="project_name_box">
          Project name
        </label>

        <input type="text" id="project_name_box" name="query_project_name">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="photo">
          Project Photo
        </label>

        <input type="file" id="photo" name="photo_upload">
      </div>

      <button>
        Create project
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          Project name
        </th>

        <th>
          Created By
        </th>

        <th>
          Description
        </th>

        <th>
          Photo
        </th>

        <th>
          Collaborators
        </th>

        <th>
          Created
        </th>

        <th>
          Last Update
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_projects.each do |a_project| %>
      <tr>
        <td>
          <%= a_project.project_name %>
        </td>

        <td>
          <%= a_project.user.username %>
        </td>

        <td>
          <%= a_project.description %>
        </td>

        <td>
          <img src="<%= a_project.photo %>"
        </td>

        <td>
          <%= a_project.invitations_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_project.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_project.updated_at) %> ago
        </td>

        <td>
          <a href="/projects/<%= a_project.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
