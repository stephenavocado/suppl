<div>
  <div>
    <h1>
      Projects
    </h1>
  </div>
</div>

<hr>

<% @list_of_projects.each do |a_project| %>
  <%if a_project.user_id == session.fetch(:user_id)%>

  <div class="card mw-100">
    <div class="card-body">
      <h5 class="card-title"><%= a_project.project_name %></h5>
        <p class="card-text"><%= a_project.description %></p>
        <a href="/projects/<%= a_project.id %>" class="btn btn-primary">View Project</a>
      </div>
    </div>
  <% end %>
<% end %>

<hr>

<! Modal >

<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
<i class="fas fa-plus-circle"></i> New Project
</button>

<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Add new project</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/insert_project" method="post">
      <div>
        <label for="project_name_box">
          Project name
        </label>

        <input type="text" id="project_name_box" name="query_project_name">
      </div>

      <div>
        <input type="hidden" id="user_id_box" name="query_user_id" value="<%= session.fetch(:user_id) %>">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="photo">
          Project Photo
        </label>

        <input type="file" id="photo" name="photo_upload">
      </div>

      <button>
        Create project
      </button>
    </form>
      </div>
    </div>
  </div>
</div>