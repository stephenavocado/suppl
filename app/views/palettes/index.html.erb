<div>
  <div>
    <h1>
      List of all palettes
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new palette
    </h2>

    <form action="/insert_palette" method="post">
      <div>
        <label for="material_id_box">
          Material
        </label>

        <input type="text" id="material_id_box" name="query_material_id">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <div>
        <label for="description_box">
          Description
        </label>

        <input type="text" id="description_box" name="query_description">
      </div>

      <div>
        <label for="saves_count_box">
          Saves count
        </label>

        <input type="text" id="saves_count_box" name="query_saves_count">
      </div>

      <button>
        Create palette
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Material
        </th>

        <th>
          User
        </th>

        <th>
          Name
        </th>

        <th>
          Description
        </th>

        <th>
          Saves count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_palettes.each do |a_palette| %>
      <tr>
        <td>
          <%= a_palette.id %>
        </td>

        <td>
          <%= a_palette.material_id %>
        </td>

        <td>
          <%= a_palette.user_id %>
        </td>

        <td>
          <%= a_palette.name %>
        </td>

        <td>
          <%= a_palette.description %>
        </td>

        <td>
          <%= a_palette.saves_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_palette.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_palette.updated_at) %> ago
        </td>

        <td>
          <a href="/palettes/<%= a_palette.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
