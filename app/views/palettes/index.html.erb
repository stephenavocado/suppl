<div class="row fluid">
  <div class="col-md-2 text-end">
    <h1>Your Palettes</h1>
    <a href="#newpalette" data-bs-toggle="modal" data-bs-target="#newpalette" class="logo">
      <i class="fas fa-plus-circle"></i>
    </a>
  </div>

  <div class="col-md-1">
  </div>

  <div class="col-md-9">
    
    <% @current_user.palettes.each do |a_palette| %>
    <div class="card mw-100 mt-2">
      <div class="card-body">
      <div class="row fluid">
        <div class="col-md-4">
          <h5 class="card-title"><%= a_palette.palette_name %></h5>
          <p class="card-text"><%= a_palette.description %></p>
          <a href="/palettes/<%= a_palette.id %>" style="text-decoration: none"><p class="card-text" style="color: #E9832A"><small>View Palette</small></p></a>
        </div>

        <%a_palette.palette_saves.limit(4).each do |a_save|%>
        
            <div class ="col-md-2">  
              <img src="<%=a_save.material.photo_ref%>" class="img-fluid rounded" width="200" height="200">
            </div>

        <%end%>

      </div>
      </div>
    </div>
<% end %>

<%= render "/palettes/new_palette_modal" %>


  </div>


</div>

