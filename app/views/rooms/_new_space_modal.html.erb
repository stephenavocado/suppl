<div class="modal fade" id="addnewspace" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="addnewspaceLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addnewspaceLabel">Create new space</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body"> 

      <form action="/insert_room" method="post">
      <div>
        <div class="form-floating mb-3">
          <input type="text" class="form-control" id="space_name" placeholder="..." name="query_name">
          <label for="space_name">Name</label>
        </div>
        
        <div>
          <input type="hidden" id="project_id_box" name="query_project_id" value="<%= @the_project.id %>">
        </div>

        <div class="form-floating mb-3">
          <input type="text" class="form-control" id="space_description" placeholder="..." name="query_description">
          <label for="space_description">Description</label>
        </div>

        <div class="row text-end">
        <div class="col">
        <button class="btn btn-outline-dark btn-sm">
            Create space
        </button>
        </div>
        </div>
      </form>
      </div>
    </div>
  </div>
</div>
</div>