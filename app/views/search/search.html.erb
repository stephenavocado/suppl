<div class="container">
<div class="row mt-5">
</div>
<div class="row mt-3">
</div>
<div class="row mt-5 fluid align-items-center">
  <div class="col-md-6">
    <h1 style="color: rgb(239, 131, 84)">Suppl</h1>
    <div class="col">
      <h4>Your one stop shop for material discovery and procurement. </h4>
    </div>

    <div class="btn-toolbar mt-5" role="toolbar" aria-label="Toolbar with button groups">
      <div class="btn-group me-2" role="group" aria-label="First group">
        <button type="button" class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#signin">Sign In</button>
      </div>
      
      <div class="btn-group me-2" role="group" aria-label="Second group">
        <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#signup">Sign Up</button>
      </div>
    </div>
  </div>

  <div class="col-md-6 mb-3 text-end">

    <video class="rounded" frameborder="0" width="560" height="315" controls allowfullscreen>
      <source src="/polskyvideo.mp4" type="video/mp4">
    </video>
  </div>
</div>

<div class="row mt-5">
  <div class="col text-center">
    <div class="card home test">
      <div class="card-body">
        <div class="mt-5"><i class="fas fa-search fa-4x"></i></div>
        <h6 class="mt-5"><strong>Find Materials</strong></h6>
      </div>
      <div class="overlay">
        <h3 class="text"><strong>Find Materials</strong></h3>
      </div>
    </div>
  </div>

  <div class="col text-center">
    <div class="card home test">
      <div class="card-body">
        <div class="mt-5"><i class="fas fa-swatchbook fa-4x"></i></div>
        <h6 class="mt-5"><strong>Create Palettes</strong></h6>
      </div>
      <div class="overlay">
        <h3 class="text"><strong>Save your favorites</strong></h3>
      </div>
    </div>
  </div>

  <div class="col text-center">
    <div class="card home test">
      <div class="card-body">
        <div class="mt-5"><i class="far fa-building fa-4x"></i></div>
        <h6 class="mt-5"><strong>Build Projects</strong></h6>
      </div>
      <div class="overlay">
        <h4 class="text"><strong>Build Projects & Collaborate with your Team</strong></h4>
      </div>
    </div>
  </div>

  <div class="col text-center">
    <div class="card home test">
      <div class="card-body">
        <div class="mt-5"><i class="fas fa-shopping-cart fa-4x"></i></div>
        <h6 class="mt-5"><strong>Purchase Direct</strong></h6>
      </div>
      <div class="overlay">
        <h3 class="text"><strong>Coming soon!</strong></h3>
      </div>
    </div>
  </div>

  <div class="col text-center">
    <div class="card home test">
      <div class="card-body">
        <div class="mt-5"><i class="fas fa-truck-loading fa-4x"></i></div>
        <h6 class="mt-5"><strong>Track Delivery</strong></h6>
      </div>
      <div class="overlay">
        <h3 class="text"><button type="button" class="btn btn-outline-success btn-sm mt-2" data-bs-toggle="modal"><i class="fas fa-plus-circle"></i></button></h3>
      </div>
    </div>
  </div>

</div>

<!-- Sign In Modal -->
<div>
<%= render "user_authentication/sign_in_modal" %>
</div>

<!-- Sign Up Modal -->
<div>
<%= render "user_authentication/sign_up_modal" %>
</div>

</div>