<div>
  <div>
    <h1>
      List of all invitations
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new invitation
    </h2>

    <form action="/insert_invitation" method="post">
      <div>
        <label for="recipient_id_box">
          Recipient
        </label>

        <input type="text" id="recipient_id_box" name="query_recipient_id">
      </div>

      <div>
        <label for="project_id_box">
          Project
        </label>

        <input type="text" id="project_id_box" name="query_project_id">
      </div>

      <div>
        <label for="sender_id_box">
          Sender
        </label>

        <input type="text" id="sender_id_box" name="query_sender_id">
      </div>

      <div>
        <label for="status_box">
          Status
        </label>

        <input type="text" id="status_box" name="query_status">
      </div>

      <button>
        Create invitation
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Recipient
        </th>

        <th>
          Project
        </th>

        <th>
          Sender
        </th>

        <th>
          Status
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_invitations.each do |an_invitation| %>
      <tr>
        <td>
          <%= an_invitation.id %>
        </td>

        <td>
          <%= an_invitation.recipient_id %>
        </td>

        <td>
          <%= an_invitation.project_id %>
        </td>

        <td>
          <%= an_invitation.sender_id %>
        </td>

        <td>
          <%= an_invitation.status %>
        </td>

        <td>
          <%= time_ago_in_words(an_invitation.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_invitation.updated_at) %> ago
        </td>

        <td>
          <a href="/invitations/<%= an_invitation.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
