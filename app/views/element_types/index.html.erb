<div>
  <div>
    <h1>
      List of all element types
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new element type
    </h2>

    <form action="/insert_element_type" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <button>
        Create element type
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_element_types.each do |an_element_type| %>
      <tr>
        <td>
          <%= an_element_type.id %>
        </td>

        <td>
          <%= an_element_type.name %>
        </td>

        <td>
          <%= time_ago_in_words(an_element_type.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_element_type.updated_at) %> ago
        </td>

        <td>
          <a href="/element_types/<%= an_element_type.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
