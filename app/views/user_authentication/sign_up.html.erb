<h1>Sign up</h1>

<form action="/insert_user" method="post">

  <div class="row">
    <div class="col">
     <input type="text" class="form-control" placeholder="First name" aria-label="First name" name="query_first_name">
  </div>
  <div class="col">
    <input type="text" class="form-control" placeholder="Last name" aria-label="Last name" name="query_last_name">
  </div>
  </div>

  <div class="input-group mb-3">
    <span class="input-group-text" id="basic-addon1">@</span>
    <input type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1" name="query_username">
  </div>

  <div>
    <label for="email_box">Email</label>
    <input id="email_box" name="query_email" placeholder="Choose a email..." type="text">
  </div>
                 
  <div>
    <label for="user_type">User type</label>
    <select id="user_type" name="query_user_type">
      <option value="designer">Designer</option>
      <option value="supplier">Supplier</option>
      <option value="owner">Owner</option>
    </select>
  </div>
         
  <div>
    <label for="password_box">Password</label>
    <input id="password_box" name="query_password" placeholder="Choose a password..." type="password">
  </div>

  <div>
    <label for="password_confirmation_box">Password Confirmation</label>
    <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." type="password">
  </div>

  <button>
    Sign up
  </button>
</form>

<hr>

<p>
  Or, <a href="/user_sign_in">Sign in</a> instead.
</p>

