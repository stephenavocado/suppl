<div >
  <h5>
    Edit User Account
  </h5>

  <div>
    <form action="/modify_user" method="post">
      <div>
        <label for="email_box">Email</label>
        <input id="email_box" name="query_email" value="<%= @current_user.email %>">
      </div>
      <div>
        <label for="user_type_box">User type</label>
        <input id="user_type_box" name="query_user_type" value="<%= @current_user.user_type %>">
      </div>
      <div>
        <label for="username_box">Username</label>
        <input id="username_box" name="query_username" value="<%= @current_user.username %>">
      </div>
      <div>
        <label for="first_name_box">First name</label>
        <input id="first_name_box" name="query_first_name" value="<%= @current_user.first_name %>">
      </div>
      <div>
        <label for="last_name_box">Last name</label>
        <input id="last_name_box" name="query_last_name" value="<%= @current_user.last_name %>">
      </div>
      <div>
        <label for="comments_count_box">Comments count</label>
        <input id="comments_count_box" name="query_comments_count" value="<%= @current_user.comments_count %>">
      </div>
      <div>
        <label for="projects_count_box">Projects count</label>
        <input id="projects_count_box" name="query_projects_count" value="<%= @current_user.projects_count %>">
      </div>
      <div>
        <label for="invitations_sent_count_box">Invitations sent count</label>
        <input id="invitations_sent_count_box" name="query_invitations_sent_count" value="<%= @current_user.invitations_sent_count %>">
      </div>
      <div>
        <label for="invitation_requests_count_box">Invitation requests count</label>
        <input id="invitation_requests_count_box" name="query_invitation_requests_count" value="<%= @current_user.invitation_requests_count %>">
      </div>

      <div>
        <label for="password_box">Password</label>
        <input id="password_box" name="query_password" placeholder="Choose a password..." type="password">
      </div>
    
      <div>
        <label for="password_confirmation_box">Password Confirmation</label>
        <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." type="password">
      </div>

      <button>
        Update account
      </button>
    </form>
  </div>
</div>
