<div class="row fluid">

  <div class="col-md-6">
    <h1>Your Dashboard</h1>
  </div>

   <div class="col-md-4 mt-2 text-end">
    <h2>@<%= @current_user.username %></h2>
  </div>

  <div class="col-md-2 mt-3">
    <button class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#edit_profile">Update Account <i class="fas fa-edit"></i></a>
  </div>
</div>

<hr>

<div class="row fluid mt-4 mb-5">

  <div class="col-md-6">
    <h4>Approval Requests</h4>
  </div>

  <div class="col-md-6">
    <h4>Invitations</h4>

    <% @list_of_invitations.each do |an_invitation| %>

      <%= render "/invitations/invitation_card", {:the_invitation => an_invitation} %>

        <td>
          Status: <%= an_invitation.status %>
        </td>

    <% end %>
  </div>

</div>

<div class="row fluid mt-5">

  <div class="col-md-6">
    <h4>Projects</h4>

    <% @list_of_projects.each do |a_project| %>
      <%if a_project.user_id == session.fetch(:user_id)%>

        <div class="card mb-2">
          <div class="card-body">
            <div class="row fluid">
              <div class="col-md-6" align-middle>
                <h5><%= a_project.project_name %></h5>
              </div>
              <div class="col-md-6 text-end">
              <a href="/projects/<%= a_project.id %>" class="btn btn-outline-dark btn-sm">View Project <i class="fas fa-home"></i></a>
              </div>
            </div>
          </div>
        </div>
        
      <%end%>
    <%end%>

    <% @list_of_invitations.each do |a_project| %>
      <%if a_project.recipient_id == session.fetch(:user_id) && a_project.status == "Accepted" %>

        <div class="card mb-2">
          <div class="card-body">
            <div class="row fluid">
              <div class="col-md-6" align-middle>
                <h5><%= a_project.project.project_name %></h5>
              </div>
              <div class="col-md-6 text-end">
              <a href="/projects/<%= a_project.id %>" class="btn btn-outline-dark btn-sm">View Project <i class="fas fa-home"></i></a>
              </div>
            </div>
          </div>
        </div>

      <%end%>
    <%end%>
  </div>

  <div class="col-md-6">
    <h4>Palettes</h4>

    <% @list_of_palettes.each do |a_palette| %>
      <%if a_palette.user_id == session.fetch(:user_id)%>
        

         <div class="card mb-2">
          <div class="card-body">
            <div class="row fluid">
              <div class="col-md-6" align-middle>
                <h5><%= a_palette.palette_name %></h5>
              </div>
              <div class="col-md-6 text-end">
              <a href="/palettes/<%= a_palette.id %>" class="btn btn-outline-dark btn-sm">View Palette <i class="fas fa-swatchbook"></i></a>
              </div>
            </div>
          </div>
        </div>


      <%end%>
    <%end%>
  </div>

</div>