<div class="row fluid">

  <div class="col-md-4">
    <h1>@<%= @current_user.username %></h1>
  </div>

  <div class="col-md-3 mt-3">
    <button class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#edit_profile">Update Account <i class="fas fa-edit"></i></a>
  </div>

</div>

<div class="row fluid mt-4">

  <div class="col-md-6">
    <h4>Approval Requests</h4>
  </div>

  <div class="col-md-6">
    <h4>Invitations</h4>

    <% @list_of_invitations.each do |an_invitation| %>

      <tr>
        <td>
          <%= an_invitation.project.project_name %>
        </td>

        <td>
          <%= an_invitation.sender_id %>
        </td>

        <td>
          <%= time_ago_in_words(an_invitation.created_at) %> ago
        </td>

        <td>
          Status: <%= an_invitation.status %>
        </td>

        <td>
          <form action="/accept_invitation/<%= an_invitation.id %>" method="post">
            <button class="btn btn-outline-success btn-sm">
              Accept
            </Button>
          </form>
        </td>

        <td>
          <a href="/decline_invitation/<%= an_invitation.id %>" method="post">
            Reject
          </a>
        </td>
      </tr>
    <% end %>
  </div>

</div>